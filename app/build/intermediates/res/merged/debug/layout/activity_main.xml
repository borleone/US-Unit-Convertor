<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#333333"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#333333"
            android:gravity="center" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/b1"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:text="weight" />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:text="volume" />

                <Button
                    android:id="@+id/b3"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:text="distance" />

                <Button
                    android:id="@+id/b4"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:text="temp" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="80dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="35dp"
                android:text="$"
                android:textColor="#FFFFFF"
                android:textSize="27sp" />

            <Spinner
                android:id="@+id/US"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="35dp"
                android:background="#DDDDDD"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="158dp" >

            <EditText
                android:id="@+id/editText1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/rect_text_edit"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editText11"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/rect_text_edit"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="numberSigned|numberDecimal"
                android:selectAllOnFocus="true"
                android:textColor="#000000" />
        </LinearLayout>

        <Button
            android:id="@+id/convert1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="17dp"
            android:drawableRight="@drawable/arrowup"
            android:text="Convert " />

        <View
            android:id="@+id/line"
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="280dp"
            android:background="#DEEDEE" />

        <Button
            android:id="@+id/convert2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="15dp"
            android:drawableRight="@drawable/arrowdown"
            android:text="Convert " />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="325dp" >

            <Spinner
                android:id="@+id/currency"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="#DDDDDD"
                android:gravity="center" />

            <Spinner
                android:id="@+id/IN"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="35dp"
                android:background="#DDDDDD"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="403dp" >

            <EditText
                android:id="@+id/editText2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_text_edit"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editText22"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/rect_text_edit"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="numberSigned|numberDecimal"
                android:selectAllOnFocus="true"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Rate/unit"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

</ScrollView><!-- From: file:/C:/Users/Borle/AndroidStudioProjects/USUnitConvertor/app/src/main/res/layout/activity_main.xml -->